#!/bin/bash
echo "Current Balances:"
echo ""
hledger bal Assets:BofTX --flat --pretty-tables "$@"
echo ""
hledger -f ~/ledger/master.ledger -f ~/ledger/budget.ledger bal Assets:BofTX --forecast -p "every 14 days from $(hledger-payday) to $(hledger-payday 8)" -H --pretty-tables "$@"
echo ""
hledger -f ~/ledger/master.ledger -f ~/ledger/budget.ledger bal Assets:BofTX --forecast -p "every 14 days from $(hledger-payday 8) to $(hledger-payday 15)" -H --pretty-tables "$@"
echo ""
