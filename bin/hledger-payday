#!/bin/sh
depth=$1
if [ -z "$1" ]
then
    depth=0
fi

weeknumber=$(date +%W)

if [ $(( weeknumber % 2 )) -eq 0 ]
then
    payday=$(date -d "Friday + 1 week" +%Y-%m-%d)
else
    payday=$(date -d "Friday" +%Y-%m-%d)
fi

if [ "$depth" = 0 ]
then
    echo "$payday"
else
    depth=$(echo "$depth*2" | bc -l)
    payday=$(date -d "$payday +$depth weeks" +%Y-%m-%d)
    echo "$payday"
fi
